class Human {
    + name
}

class AI {
    + name
    + difficulty()
}

class Players {
    + Black
    + White
}

class Board {
    + size
    + matrix
    + get_cell(row, col)
    + update_cell(row, col)
    + update_board(row, col)
}

class ReversiGame {
     + change_player()
     + make_move()
     + sum_player_pts()
     + check_winner()
     + is_valid_move()
}

class NewRules {
    + is_valid_move

}

abstract class Game {
     + change_player()
     + make_move()
     + sum_player_pts()
     + check_winner()
     + is_valid_move()
}

